    .tab-item {
        padding: 15px 30px;
        cursor: pointer;
        font-weight: 500;
    }
    
    .tab-item.active {
        color: #333;
        border-bottom: 3px solid #9370DB;
    }
    
    .tab-content {
        padding: 30px 0;
        line-height: 1.6;
    }
    
